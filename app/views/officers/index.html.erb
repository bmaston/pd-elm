<p id="notice"><%= notice %></p>

<h1>Listing Officers</h1>



<div  class="container"><div class="pull-right"><i class="fa fa-plus"></i> <%= link_to 'Add Officer', new_officer_path %></div>
<table  class="table table-striped table-hover table-bordered"  >
  <thead style="background-color:#fff;">
    <tr>
      <th>Last Name</th>
      <th>First Name</th>
      <th>Middle Initial</th>
      <th>Badge #</th>
      <th>Location in Department</th>
      <th>Initial Certification</th>
      <th>Recertification</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @officers.each do |officer| %>
      <tr>

        <td><%= officer.last_name %></td>
        <td><%= officer.first_name %></td>
        <td><%= officer.middle_initial %></td>
        <td><%= officer.badge_number %></td>
        <td><%= officer.location_in_department %></td>
        <td><%= officer.date_initial_certification %></td>
        <td><%= officer.date_recertification %></td>
        <td><%= link_to 'Show', officer %><i class="fa fa-sign-in"></i></td>
        <td><%= link_to 'Edit', edit_officer_path(officer) %><i class="fa fa-pencil-square-o"></i></td>
        <td><%= link_to 'Destroy', officer, method: :delete, data: { confirm: 'Are you sure?' } %><i class="fa fa-trash-o"></i></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>
